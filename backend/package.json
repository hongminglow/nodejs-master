{
	"name": "nodejs-master",
	"version": "1.0.0",
	"description": "A comprehensive Node.js learning project featuring GraphQL, REST, SQLite, WebSockets, and more",
	"main": "src/server.js",
	"scripts": {
		"start": "node src/server.js",
		"dev": "nodemon src/server.js",
		"test": "jest --verbose",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"seed": "node src/database/seeders/seed.js",
		"lint": "eslint src/",
		"format": "prettier --write \"src/**/*.js\""
	},
	"keywords": [
		"nodejs",
		"graphql",
		"express",
		"sqlite",
		"learning",
		"tutorial",
		"rest-api",
		"websockets"
	],
	"author": "",
	"license": "MIT",
	"type": "commonjs",
	"dependencies": {
		"@apollo/server": "^4.11.3",
		"bcrypt": "^5.1.1",
		"cors": "^2.8.5",
		"dotenv": "^16.4.7",
		"express": "^4.21.2",
		"graphql": "^16.10.0",
		"graphql-tag": "^2.12.6",
		"helmet": "^8.0.0",
		"joi": "^17.13.3",
		"jsonwebtoken": "^9.0.2",
		"morgan": "^1.10.0",
		"node-cron": "^3.0.3",
		"sequelize": "^6.37.5",
		"sqlite3": "^5.1.7",
		"uuid": "^11.1.0",
		"winston": "^3.17.0",
		"ws": "^8.18.0"
	},
	"devDependencies": {
		"jest": "^29.7.0",
		"nodemon": "^3.1.9",
		"eslint": "^8.57.1",
		"prettier": "^3.4.2",
		"supertest": "^7.0.0"
	}
}
